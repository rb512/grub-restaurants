<!DOCTYPE html>
<html>
<head>
  <title>GrubshireOnsite</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<div class="navbar navbar-fixed-top">
	    <div class="navbar-inner">
	      <div class="container">
	        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	        </a>
			<%=link_to "GrubShire", root_path, :class => "brand"%>
	        <div class="nav-collapse">
	          <ul class="nav">
	            <li><%= link_to "Menu", menus_path %></li>
	            <li><%= link_to "Restaurants" %></li>
	            <li><%= link_to "Waiters" %></li>
	            <li><%= link_to "Metrics" %></li>
	          </ul>
	        </div>
	      </div>
	    </div>
	  </div>

	  <div class="container">
	    <div class="row">
			<%if notice%>
				<%=render "layouts/notice", :notice => (notice||alert), :id =>"notice"%>
			<%elsif alert%>
				<%=render "layouts/notice", :notice => (notice||alert), :id =>"error"%>
			<%end%>
			<% if user_restaurant_signed_in?%>
			<%=link_to "Sign Out", destroy_user_restaurant_session_path, :method => 'delete'%>
			<%end%>
	      <div class="span10"><%= yield %></div>
	     
	    </div>
	  </div>
  <%= javascript_include_tag :application %>
</body>
</html>
