<h1>Listing Restaurants</h1>

<%if @restaurants.empty?%>
	<h2> No Restaurants Added Yet!</h2>

<%else%>
<div class="well">
<table class="table">
	<thead>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Country</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Zip</th>
    <th>Actions</th>

  </tr>
</thead>
<% @restaurants.each do |restaurant| %>
<tbody>
  <tr>
    <td><%= link_to restaurant.name, restaurant_path(restaurant) %></td>
    <td><%= restaurant.address %></td>
    <td><%= restaurant.city %></td>
    <td><%= restaurant.state %></td>
    <td><%= restaurant.country %></td>
    <td><%= restaurant.phone %></td>
    <td><%= restaurant.email %></td>
    <td><%= restaurant.zip %></td>
    <td>
    <%= link_to '', edit_restaurant_path(restaurant), :class => 'icon-pencil' %>
    <%= link_to '', restaurant, :class =>"icon-remove", confirm: 'Are you sure?', method: :delete %></td>
  </tr>
</tbody>
<% end %>
</table>
</div>
<br />
<%end%>

<%= link_to 'Add New Restaurant', new_restaurant_path, :class => 'btn btn-primary'%>

<div class="pagination">
    <ul>
        <li><a href="#">Prev</a></li>
        <li><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">Next</a></li>
    </ul>
</div>
