

  <div class="content">
   <div class="page-title">
   </div>
  <!-- BEGIN DASHBOARD TILES -->
 <div class="row">	 
<div class="col-md-6 col-vlg-3 col-sm-5">
	<div class="tiles green added-margin  m-b-20">
           <div class="tiles-body">
	  <div class="controller"> <a href="javascript:;" class="reload"></a> <a href="javascript:;" class="remove"></a> </div>
             <div class="tiles-title text-black">BY TABLET</div>
	         <div class="widget-stats">
                   <div class="wrapper transparent"> 
				<span class="item-title">Tablets</span> <span class="item-count animate-number semi-bold" data-value="50" data-animation-duration="700"><%=@orders_by_tablet.size%></span>
			  </div>
                 </div>
                 <div class="widget-stats ">
                   <div class="wrapper last"> 
				<span class="item-title">Total Orders</span> <span class="item-count animate-number semi-bold" data-value="60" data-animation-duration="700"><%=@order_total%></span> 
			 </div>
                 </div>
                 <div class="progress transparent progress-small no-radius m-t-20" style="width:90%">
                   <div class="progress-bar progress-bar-white animate-progress-bar" data-percentage="64.8%" ></div>
                 </div>

	  </div>			
		<%=content_tag :div, "", id: 'donut', data: {bytablet: @orders_by_tablet}, style: 'background:white; height: 250px'%>
	</div>	


</div>
<div class="col-md-6 col-vlg-3 col-sm-5">
	<div class="tiles blue added-margin  m-b-20">
           <div class="tiles-body">
	  <div class="controller"> <a href="javascript:;" class="reload"></a> <a href="javascript:;" class="remove"></a> </div>
             <div class="tiles-title text-black">BY CATEGORY</div>

                 <div class="widget-stats">
                   <div class="wrapper transparent">
				<span class="item-title">Categories</span> <span class="item-count animate-number semi-bold" data-value="<%=@order_count%>" data-animation-duration="700"><%=@order_by_category.size%></span> 
			  </div>
                 </div>
                 <div class="widget-stats ">
                   <div class="wrapper last"> 
				<span class="item-title">Total Orders</span> <span class="item-count animate-number semi-bold" data-value="<%=@order_count%>" data-animation-duration="700"><%=@orders.size%></span> 
			 </div>
                 </div>
                 <div class="progress transparent progress-small no-radius m-t-20" style="width:90%">
                   <div class="progress-bar progress-bar-white animate-progress-bar" data-percentage="54%" ></div>
                 </div>
	  </div>	
		<%=content_tag :div, "", id: 'area', data: {bycategory: @order_by_category}, style: 'background:white; height: 250px'%>		
	</div>	
</div>		
</div>
 <!-- END DASHBOARD TILES -->
 
   <div class="row">
	<div class="col-md-12 m-b-20">					
		<!-- BEGIN SALES WIDGET WITH FLOT CHART -->
		<div class="tiles white add-margin">
				<div class="p-t-20 p-l-20 p-r-20 p-b-20">
				<div class="row b-grey b-b xs-p-b-20">
				<div class="col-md-4 col-sm-4">

					<h4 class="text-black semi-bold">Total Orders</h4>
					<h3 class="text-success semi-bold"><%=@orders.count%></h3>
				</div>
				<div class="col-md-3 col-sm-3">
				<div class="m-t-20">
					<h5 class="text-black semi-bold">Total Sales</h5>
					<h4 class="text-success semi-bold">$ <%=@orders.sum(:total)%></h4>
				</div>
				</div>
			</div>
			
				<div class="row b-grey">
				<div class="col-md-3 col-sm-3">
				<div class="m-t-10">
					<p class="text-success">Trending Item</p>
					<p class="text-black"></p>
				</div>
				</div>
				<div class="col-md-4 col-sm-4">
				<div class="m-t-10">
					<p class="text-success">Most Ordered</p>
					<p class="text-black"></p>
				</div>
				</div>
				<div class="col-md-5 col-sm-5">
				<div class="m-t-10">
				
					<div class="pull-left">
					Trending Item Sales
					</div>
					<div class="pull-right">
					<span class="text-success"></span>
					</div>
					<div class="clearfix"></div>
					<div class="pull-left">
						Most Ordered Item Sales
					</div>
					<div class="pull-right">
					<span class="text-success"></span>
					</div>
					<div class="clearfix"></div>
				</div>
				</div>
				</div>
				</div>
				<%=content_tag :div, "", id: "order_detail", data: {orders: @order_details}%>
				</div>
			</div>
		<!-- END SALES WIDGET WITH FLOT CHART -->
	</div>
	</div>
     </div>
  </div>
  </div>
 
 </div>