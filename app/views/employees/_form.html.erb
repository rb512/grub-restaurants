<%= simple_form_for(@employee) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
	<%= f.label :category%>
    <%= f.select :category, @category %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :avatar %>
	<%=f.label :restaurant%>
	<%=f.select :restaurant_id, @employee.owner.restaurants.collect {|restaurant| [restaurant.name, restaurant.id]} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
