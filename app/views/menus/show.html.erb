<%- model_class = Menu -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @menu.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_default) %>:</strong></dt>
  <dd><%= @menu.is_default %></dd>
  <dt><strong><%= model_class.human_attribute_name(:menu_type) %>:</strong></dt>
  <dd><%= @menu.menu_type %></dd>
</dl>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              menus_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_menu_path(@menu), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              menu_path(@menu),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>

<dl class ="dl-horizontal">
<%=link_to "New Menu Item", my_menu_item_path(@menu.id), :id => 'new_link', :remote => true%>
</dl>



<h3>Menu Items</h3>
<div id="menu_items">
	<%=render :partial => "menu_items", :menu_items => @menu_items%>
</div>

