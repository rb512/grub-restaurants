<div class="content">
  <div class="page-title"> <i class="icon-custom-portlets"></i>
    <h3><span class="semi-bold"><%=@menu.name%></span></h3>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="grid simple ">
        <div class="grid-body ">
          <table class="table table-hover table-condensed" id="example">
            <thead>
              <tr>
                <th style="width:10%">Item Name</th>
                <th style="width:22%" data-hide="phone,tablet">Item Description</th>
                <th style="width:6%">Price</th>
                <th style="width:10%" data-hide="phone,tablet">Category</th>
								<th style="width:15%">Actions</th>
              </tr>
            </thead>
            <tbody>
							<%@menu_items.each do |item|%>
              <tr>
                <td><%=item.name%></td>
                <td><span class="muted"><%=item.description%></span></td>
                <td><%=item.price%></td>
                <td><span class="muted"><%=item.category%></span></td>                
								<td>
									<%=link_to "Show",  menu_menu_item_path(item.menu.id, item.id), :class => 'btn btn-info'%>
									<%=link_to 'Edit', edit_menu_menu_item_path(item), :class => 'btn btn-success'%>
									<%=link_to 'Delete', menu_menu_item_path(item.id), :confirm => 'Are you sure?', :method => :delete, 									:class => 'btn btn-danger'%>
								</td>
              </tr>
							<%end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>