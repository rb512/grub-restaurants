<%= form_for @menu_item, :validate => true, :html => { :class => 'form-horizontal' } do |f| %>
 <%if @menu_item.errors.any?%>
 <div class="container">
	 <div class="row">
		 <div class="span6">
<div class = "alert alert-error">
	<a class="close" data-dismiss="alert">x</a>
